<% comments.each do |comment|%>
  <div style="padding: 2px" >
    <%= comment.user.username %> - <%= comment.comment %>
    <%= link_to 'Edit Comment', edit_comment_path(comment) %>
    <%= link_to 'Delete Comment', comment_path(comment),
     method: :delete,
     data: {confirm: 'Are you sure?'} %>
  </div>
<% end%>
